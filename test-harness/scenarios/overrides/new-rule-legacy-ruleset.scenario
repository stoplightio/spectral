====test====
Respect overrides with rules-only
====asset:spectral.yaml====
aliases:
  OperationObject:
    - "#PathItem[get,put,post,delete,options,head,patch,trace]"
  PathItem:
    - $.paths[*]
rules:
  operation-description:
    given: '#OperationObject'
    then:
      field: 'description'
      function: 'truthy'
    severity: error
overrides:
  - files: ["v2/**/*.json"]
    rules:
      summary-description:
        given: '#OperationObject'
        then:
          field: 'summary'
          function: 'truthy'
        severity: warn
