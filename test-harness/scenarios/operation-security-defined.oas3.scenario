extends: [[spectral:oas, off]]
rules:
  oas3-operation-security-defined: error
====document====
openapi: 3.0.2
paths:
  /pets:
    get:
      security:
        - {}
      responses:
        '200':
          description: abc
    post:
      security:
        - {}
        - Bearer: []
      responses:
        '200':
          description: abc
    delete:
      security:
        - Bearer: []
      responses:
        '200':
          description: abc
components:
  securitySchemes:
    Bearer:
      type: http
      scheme: bearer
