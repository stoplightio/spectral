info:
  title: Example $ref error
  version: 1.0.0
  contact:
    foo: me
paths:
  /user:
    get:
      operationId: getUser
      parameters:
        - type: string
          name: module_id
          in: path
          required: true
          schema:
            type: string
          description: Module ID
        - name: module_id
          in: bar
          required: true
          schema:
            type: [string, number]
        - name: alias
          in: path
          type: string
          required: true
          example: Joe
      responses:
        "200":
          description: An Example
          content:
            application/json:
              schema:
                type: object
                properties:
                  user_id: 12345
            application/yaml:
              schema:
                type: object
                properties:
        "400":
          description: []
  /address:
    get:
      responses: {}
