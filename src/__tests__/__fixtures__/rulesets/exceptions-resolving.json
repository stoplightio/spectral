{
  "rules": {
    "no-yaml-remote-reference": {
      "message": "$ref must not point at yaml files",
      "given": "$..$ref",
      "resolved": false,
      "then": {
        "function": "pattern",
        "functionOptions": {
          "notMatch": "\\.yaml(#.*)$"
        }
      }
    },
    "no-remote-reference": {
      "message": "$ref must not point at remote files",
      "given": "$..$ref",
      "recommended": true,
      "resolved": false,
      "then": {
        "function": "pattern",
        "functionOptions": {
          "notMatch": "\\.[a-z]*(#.*)$"
        }
      }
    },
    "strings-maxLength": {
      "message": "String typed properties MUST be further described using 'maxLength'. Error: {{error}}",
      "given": "$..*[?(@.type === 'string')]",
      "then": {
        "field": "maxLength",
        "function": "truthy"
      }
    },
    "schema": {
      "message": "I always throw!",
      "given": "$",
      "then": {
        "function": "falsy"
      }
    },
    "no-json-schema-integer-type": {
      "given": "$.components.schemas..type",
      "then": {
        "function": "pattern",
        "functionOptions": {
          "notMatch": "^integer$"
        }
      }
    }
  },
  "except": {
    "../exceptions.remote.oas3.yaml#/components/schemas/TheRemoteType": ["strings-maxLength"],
    "../../foo.json#/components/schemas/TheLocalType/$ref": ["no-yaml-remote-reference"],
    "../../foo.json#/components/schemas/integerRemote/$ref": ["no-yaml-remote-reference"],
    "../../foo.json": ["no-remote-reference"],
    "another.yaml#": ["dummy-rule", "info-contact"],
    "#/components/schemas/integerOne/type": ["no-json-schema-integer-type"]
  }
}
