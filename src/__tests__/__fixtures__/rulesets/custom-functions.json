{
  "functions": [
    "truthy",
    "validateBar",
    "deepHasIn",
    [
      "hasIn",
      {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "property": {
            "type": ["number", "string"]
          }
        }
      }
    ]
  ],
  "rules": {
    "true-info-contact": {
      "message": "Info must contain Stoplight",
      "given": "$.info.contact",
      "type": "style",
      "recommended": true,
      "then": {
        "function": "truthy"
      }
    },
    "has-info-property": {
      "message": "{{error}}",
      "given": "$",
      "recommended": true,
      "type": "style",
      "then": {
        "function": "hasIn",
        "functionOptions": {
          "property": "info"
        }
      }
    },
    "has-info-property-invalid": {
      "message": "{{error}}",
      "given": "$",
      "type": "style",
      "then": {
        "function": "hasIn",
        "functionOptions": {
          "property": "info",
          "foo": true
        }
      }
    },
    "has-bar-get-operation": {
      "message": "{{error}}",
      "given": "$.paths",
      "type": "style",
      "then": {
        "function": "deepHasIn",
        "functionOptions": {
          "path": "/bar.get"
        }
      }
    },
    "validate-bar": {
      "message": "`bar` property should be a string",
      "given": "$",
      "then": {
        "function": "validateBar",
        "functionOptions": {
          "schema": {
            "type": "string"
          }
        }
      }
    }
  }
}
