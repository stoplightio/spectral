{
  "$id": "http://stoplight.io/schemas/rule.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Then": {
      "allOf": [
        {
          "properties": {
            "field": {
              "type": "string"
            }
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "alphabetical"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "keyedBy": {
                    "type": "string"
                  }
                },
                "type": ["object", "null"]
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "casing"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["flat", "camel", "pascal", "kebab", "cobol", "snake", "macro"]
                  },
                  "disallowDigits": {
                    "type": "boolean"
                  },
                  "separator": {
                    "additionalProperties": false,
                    "properties": {
                      "char": {
                        "type": "string",
                        "maxLength": 1
                      },
                      "allowLeading": {
                        "type": "boolean"
                      }
                    },
                    "required": ["char"],
                    "type": "object"
                  }
                },
                "required": ["type"],
                "type": "object"
              }
            },
            "required": ["functionOptions"]
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "enumeration"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "values": {
                    "type": "array",
                    "items": {
                      "type": ["string", "number"]
                    }
                  }
                },
                "type": "object",
                "required": ["values"]
              }
            },
            "required": ["functionOptions"]
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "length"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "min": {
                    "type": "number"
                  },
                  "max": {
                    "type": "number"
                  }
                },
                "minProperties": 1,
                "type": "object"
              }
            },
            "required": ["functionOptions"]
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "pattern"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "match": {
                    "type": "string"
                  },
                  "notMatch": {
                    "type": "string"
                  }
                },
                "minProperties": 1,
                "type": "object"
              }
            },
            "required": ["functionOptions"]
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "schema"
              }
            }
          },
          "then": {
            "required": ["functionOptions"],
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "schema": {
                    "type": "object"
                  },
                  "oasVersion": {
                    "enum": [2, 3, 3.1],
                    "type": "number"
                  },
                  "allErrors": {
                    "type": "boolean"
                  }
                },
                "required": ["schema"],
                "type": "object"
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "schema-path"
              }
            }
          },
          "then": {
            "required": ["functionOptions"],
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "schemaPath": {
                    "type": "string"
                  },
                  "field": {
                    "type": "string"
                  },
                  "oasVersion": {
                    "enum": [2, 3, 3.1],
                    "type": "number"
                  },
                  "allErrors": {
                    "type": "boolean"
                  }
                },
                "required": ["schemaPath"],
                "type": "object"
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "unreferencedReusableObject"
              }
            }
          },
          "then": {
            "required": ["functionOptions"],
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "reusableObjectsLocation": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^#"
                  }
                },
                "required": ["reusableObjectsLocation"],
                "type": "object"
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "const": "xor"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "additionalProperties": false,
                "properties": {
                  "properties": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 2
                  }
                },
                "type": "object",
                "required": ["properties"]
              }
            },
            "required": ["functionOptions"]
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "type": "string",
                "enum": ["truthy", "falsy", "undefined"]
              }
            }
          },
          "then": {
            "type": "object",
            "properties": {
              "functionOptions": {
                "type": ["null"]
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "function": {
                "type": "string"
              }
            }
          },
          "then": {
            "properties": {
              "functionOptions": {
                "type": ["object", "null"]
              }
            }
          }
        }
      ],
      "type": "object"
    },
    "Severity": {
      "$ref": "shared.json#/Severity"
    }
  },
  "oneOf": [
    {
      "properties": {
        "description": {
          "type": "string"
        },
        "documentationUrl": {
          "type": "string",
          "format": "url"
        },
        "recommended": {
          "type": "boolean"
        },
        "given": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "resolved": {
          "type": "boolean"
        },
        "severity": {
          "$ref": "#/definitions/Severity"
        },
        "message": {
          "type": "string"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "formats": {
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        },
        "then": {
          "anyOf": [
            {
              "$ref": "#/definitions/Then"
            },
            {
              "items": {
                "$ref": "#/definitions/Then"
              },
              "type": "array"
            }
          ]
        },
        "type": {
          "enum": ["style", "validation"],
          "type": "string"
        }
      },
      "required": ["given", "then"],
      "type": "object"
    },
    {
      "$ref": "shared.json#/HumanReadableSeverity"
    },
    {
      "type": "boolean"
    },
    {
      "type": "array",
      "additionalItems": false,
      "minItems": 1,
      "items": [
        {
          "$ref": "#/definitions/Severity"
        },
        {
          "type": "object"
        }
      ]
    }
  ]
}
