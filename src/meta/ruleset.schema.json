{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://stoplight.io/schemas/ruleset.schema.json",
  "type": "object",
  "properties": {
    "documentationUrl": {
      "type": "string",
      "format": "url",
      "errorMessage": "must be a valid URL"
    },
    "rules": {
      "type": "object",
      "additionalProperties": {
        "$ref": "rule.schema.json#"
      }
    },
    "formats": {
      "$ref": "shared.json#/$defs/Formats"
    },
    "extends": {
      "type": ["array", "string"],
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "minItems": 2,
            "additionalItems": false,
            "items": [
              {
                "type": "string"
              },
              {
                "type": "string",
                "enum": ["off", "recommended", "all"],
                "errorMessage": "allowed types are \"off\", \"recommended\" and \"all\""
              }
            ]
          }
        ]
      }
    },
    "parserOptions": {
      "type": "object",
      "properties": {
        "duplicateKeys": {
          "$ref": "shared.json#/$defs/Severity"
        },
        "incompatibleValues": {
          "$ref": "shared.json#/$defs/Severity"
        }
      },
      "additionalProperties": false
    }
  },
  "anyOf": [
    {
      "required": ["extends"]
    },
    {
      "required": ["rules"]
    }
  ]
}
