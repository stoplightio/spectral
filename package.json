{
  "name": "root",
  "keywords": [
    "json linter",
    "linter",
    "json validator",
    "validator",
    "OpenAPI",
    "Swagger",
    "schema",
    "API"
  ],
  "private": true,
  "homepage": "https://github.com/stoplightio/spectral",
  "bugs": "https://github.com/stoplightio/spectral/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/spectral"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "clean": "rimraf packages/*/{dist,.cache}",
    "prebuild": "lerna run prebuild",
    "build": "tsc --build ./tsconfig.build.json",
    "postbuild": "lerna run postbuild",
    "lint": "yarn lint.prettier && yarn lint.eslint && yarn lint.changelog",
    "lint.changelog": "kacl lint",
    "lint.fix": "yarn lint.prettier --write && yarn lint.eslint --fix",
    "lint.eslint": "eslint --cache --cache-location .cache/ --ext=.js,.mjs,.ts packages test-harness",
    "lint.prettier": "prettier --ignore-path .eslintignore --ignore-unknown --check packages/core/src/meta/*.json docs/**/*.md README.md",
    "pretest": "lerna run pretest",
    "test": "yarn test.karma && yarn test.jest --coverage --maxWorkers=2",
    "test.harness": "jest -c ./test-harness/jest.config.js",
    "test.jest": "jest --silent",
    "test.karma": "karma start",
    "prepare": "husky install",
    "version": "lerna version --no-push",
    "release": "lerna publish from-package"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@brightcove/kacl": "^0.1.11",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/jest-when": "^2.7.3",
    "@types/karma": "^6.3.0",
    "@types/lodash": "^4.14.167",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^15.12.4",
    "@types/node-fetch": "^2.5.10",
    "@types/text-table": "^0.2.1",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "fast-glob": "^3.2.5",
    "fetch-mock": "^9.11.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-mock": "^27.0.3",
    "jest-when": "^3.3.1",
    "json-schema": "^0.3.0",
    "karma": "^6.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-env-preprocessor": "^0.1.1",
    "karma-jasmine": "^3.3.1",
    "karma-typescript": "^5.4.0",
    "karma-typescript-es6-transform": "^5.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "memfs": "^3.2.2",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --cache --cache-location .cache"
    ],
    "CHANGELOG.md": [
      "kacl lint",
      "prettier --write"
    ],
    "docs/**/*.md": [
      "prettier --ignore-path .eslintignore --write"
    ],
    "README.md": [
      "prettier --write"
    ],
    "packages/core/src/meta/*.json": [
      "prettier --ignore-path .eslintignore --write"
    ]
  }
}
